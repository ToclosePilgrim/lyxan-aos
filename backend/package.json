{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm exec prisma generate && jest --config ./test/jest-e2e.json",
    "test:e2e:finance": "pnpm exec prisma generate && jest --config ./test/jest-e2e.json test/e2e-flow-supply-to-reconcile.e2e-spec.ts test/e2e-flow-production-wip.e2e-spec.ts test/e2e-flow-marketplace-payout-fee.e2e-spec.ts test/e2e-flow-acquiring-clearing.e2e-spec.ts",
    "check:accounting-legal-entity-coverage": "ts-node -T tools/check-accounting-entries-legal-entity-coverage.ts",
    "check:financial-documents-legal-entity-coverage": "ts-node -T tools/check-financial-documents-legal-entity-coverage.ts",
    "check:posting-integrity": "ts-node -T tools/check-posting-integrity.ts",
    "check:architecture-lockdown": "ts-node -T tools/architecture-lockdown-check.ts",
    "check:mdm-service-items-consistency": "ts-node -T tools/check-mdm-service-items-consistency.ts",
    "check:e2e-no-prisma-writes": "ts-node -T tools/check-no-prisma-writes-in-e2e.ts --allowlist-file tools/e2e-prisma-writes-allowlist.txt",
    "check:no-test-seed-api-in-prod": "ts-node -T tools/check-no-test-seed-api-in-prod.ts",
    "check:no-compiled-in-src": "ts-node -T tools/check-no-compiled-in-src.ts",
    "check:guardrails": "pnpm -s check:architecture-lockdown && pnpm -s check:no-compiled-in-src && pnpm -s check:e2e-no-prisma-writes && pnpm -s check:posting-integrity && pnpm -s check:no-test-seed-api-in-prod"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "6.19.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "ioredis": "^5.8.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^9.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "6.19.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
